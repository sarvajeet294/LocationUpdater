<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.sarvajeet.locationtracker.Create_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UserID: "
                    android:layout_marginTop="2dp"/>
                <EditText
                    android:id="@+id/useridET"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="userID"
                    android:inputType="number"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username: "
                    android:layout_marginTop="2dp"/>
                <EditText
                    android:id="@+id/usernameET"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="username"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email ID"
                    android:layout_marginTop="2dp"/>
                <EditText
                    android:id="@+id/emailEt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="email id"
                    android:inputType="textEmailAddress"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <Button
                android:id="@+id/getLocationBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Get Location"
                android:background="#FABB05"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:drawableTop="@drawable/ic_my_location_white_24dp"/>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/locationTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#0000ff"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/submitBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:background="#4285F4"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:drawableTop="@drawable/ic_send_white_24dp"/>
        </android.support.v7.widget.CardView>


    </LinearLayout>

</FrameLayout>
